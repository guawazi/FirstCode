<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.github.guawazi.servicedemo.MainActivity">

    <Button
        android:id="@+id/btn_start_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start simple service"
        />
    <Button
        android:id="@+id/btn_stop_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop simple service"
        />

    <Button
        android:id="@+id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind_service"
        />
    <Button
        android:id="@+id/btn_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind_service"
        />
    <Button
        android:id="@+id/btn_start_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始下载"
        />
    <Button
        android:id="@+id/btn_pause_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停下载"
        />
    <Button
        android:id="@+id/btn_cancel_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消下载"
        />
</LinearLayout>
